{%- stylesheet -%}
  .product__social-share {
    h3{
      font-size: 16px;
      line-height: 24px;
      margin-bottom: 0;
      font-family: var(--font-body-family);
      margin: 0;
    }
    @media only screen and (width < 768px ) {
      h3 {
        font-size: 16px;
        line-height: 24px;
        margin-bottom: 0;
      }
    }
  }

  .social-share--label {
    display: inline-flex;
    align-items: center;
    gap: 10px;
}
{%- endstylesheet -%}


<div class="product__social-share" {{ block.shopify_attributes }}>
  {{ 'ck-block.component-social-share.css' | asset_url | stylesheet_tag: preload: true }}
  <script src="{{ 'ck-block.social-share.js' | asset_url }}" defer="defer"></script>

  <social-share
    class="social-share"
    data-url="{{ shop.url }}{{ request.path }}"
    data-title="{{ product.title }}"
  >
