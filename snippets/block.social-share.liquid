      <h3 class="element-text--heading-xs">
        {{ block.settings.share_label | escape }}
      </h3>
    </div>
    <div class="social-share--list">
      <button
        type="button"
        data-action="copy"
        class="social-share-icon social-share-icon--copy"
        aria-label="Copy link to clipboard"
        title="Copy Link"
      >
