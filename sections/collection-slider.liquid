{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .collection-slider-section {
    --font-heading-5-size: 22px;
    --font-body-size: 16px;
    .swiper-slide {
      width: 55%;
      transition: 0.3s ease;
      transform: scaleY(0.9);
      opacity: 0.6;
    }

    .swiper-slide-active {
      transform: scaleY(1);
      opacity: 1;
      border-radius: 12px;
    }
    .text-content-area {
      position: absolute;
      bottom: 30px;
      left: 50%;
      transform: translate(-50%);
      text-align: center;
      background-color: #ffffff;
      border-radius: 10px;
      padding: 22px 25px;
      opacity: 85%;
    }
    h5.title {
      margin: 0;
      letter-spacing: normal;
      font-weight: bold;
      margin-bottom: 5px;
    }
    p.text {
      letter-spacing: normal;
      line-height: 1.5;
      margin: auto;
      margin-bottom: 20px;
      font-size: var(--font-body-size);
      max-width: 318px;
    }
    .swiper {
      padding-bottom: 50px;
    }

    .swiper-slide {
      img,
      svg {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 20px;
      }
    }
    a.button {
      font-weight: bold;
      letter-spacing: normal;
      gap: 10px;
    }
    a.button svg {
      width: 24px;
    }
    .swiper-pagination-bullet {
      width: 13px;
      height: 13px;
    }
    .swiper-pagination-bullet-active {
      width: 33px;
      height: 13px;
      border-radius: 9.5px;
      background-color: #787878;
    }
    @media screen and (max-width: 1250px) {
      .text-content-area {
        padding: 22px;
      }
      .swiper-slide {
        img,
        svg {
          aspect-ratio: 16 / 10;
          object-fit: cover;
        }
      }
    }
    @media screen and (max-width: 1025px) {
      --font-heading-5-size: 18px;
      --font-body-size: 12px;
      a.button {
        font-size: 16px;
      }
    }
    @media screen and (max-width: 989px) {
      .swiper-slide {
        width: 80%;
      }
      .text-content-area {
        padding: 22px;
        position: relative;
        bottom: 0;
        left: 0;
        transform: none;
      }
      .swiper-pagination-bullet {
        width: 8px;
        height: 8px;
      }
      .swiper-pagination-bullet-active {
        width: 16px;
        height: 8px;
      }
    }
  }
</style>

<div class="collection-slider-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <collection-slider class="swiper mySwiper">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- liquid
            assign image = block.settings.image
            assign c_title = block.settings.c_title
            assign c_text = block.settings.c_text
            assign button_label = block.settings.button_label
            assign button_url = block.settings.button_url
          -%}
          <div class="swiper-slide isolate">
            {%- if image != blank -%}
              {{ image | image_url: width: image.width | image_tag: loading: 'lazy' }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag }}
            {%- endif -%}
            <div class="text-content-area">
              {%- if c_title != blank -%}
                <h5 class="title">
                  {{ c_title }}
                </h5>
              {%- endif -%}
              {%- if c_text != blank -%}
                <p class="text">{{ c_text }}</p>
              {%- endif -%}
              {%- if button_label != blank -%}
                <a href="{{ button_url }}" class="button button--secondary">
                  {{- button_label -}}
                  {{- 'icon-button.svg' | inline_asset_content -}}
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
      <div class="swiper-pagination"></div>
    </collection-slider>
  </div>
</div>

{% schema %}
{
  "name": "Collection Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "c_title",
          "label": "Title",
          "default": "The Foundation of Wellness"
        },
        {
          "type": "textarea",
          "id": "c_text",
          "label": "Text",
          "default": "Shop the Essential Supplements and Products Based on Dr. Clark's Research."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Buy Now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

<script src="{{ 'collection-slider.js' | asset_url }}" defer="defer"></script>
