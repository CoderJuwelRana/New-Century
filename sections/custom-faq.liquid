
<style>
    .faqx-container {
    padding: 0 20px;
}
    h2.faqx-title {
        text-align: center;
        font-family: Helvetica;
        font-size: 48px;
        font-weight: 700;
        margin: 0;
        margin-bottom: 20px;
        color: #155298;
    }
    p.faqx-sub {
        text-align: center;
        font-family: 'Open Sans';
        font-size: 16px;
        font-weight: 400;
        line-height: 1.87;
        margin: 0;
        margin-bottom: 80px;
        padding: 0 25rem;
        text-transform: capitalize;
        color: #000;
    }
.faqx-btn {
    width: 100%;
    padding: 22px 30px;
    border: 1px solid #B5B5B5;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'Open Sans';
    font-size: 18px;
    font-weight: 500;
    cursor: pointer;
    color: #171E16;
}
.faqx-item.active .faqx-btn{
    background:#155298;
    color:#fff;
}
.faqx-body{
    max-height:0;
    overflow:hidden;
    transition:max-height .35s ease;
}
.faqx-item {
    padding: 20px 0;
}
.faqx-inner {
    font-family: 'Open Sans';
    padding: 25px 0 0;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.62;
    color: #3C3C3C;
}
.faqx-inner p {
    margin: 0;
}
span.faqx-icon {
    font-size: 30px;
    font-weight: 600;
}
@media screen and (max-width: 1024px) {
        p.faqx-sub {
            padding: 0 4rem;
        }
    }

    @media screen and (max-width: 768px) {
        h2.faqx-title {
            font-size: 32px;
            margin-bottom: 10px;
        }
        p.faqx-sub {
            padding: 0;
            margin-bottom: 20px;
            font-size: 14px;
        }
       .faqx-btn {
        padding: 10px;
        font-size: 13px;
        text-align: left;
    }
    .faqx-item {
      padding: 10px 0;
  }
    .faqx-inner {
        padding: 15px 0;
        font-size: 13px;
        margin-left: 10px;
    }
        span.faqx-icon {
            font-size: 20px;
        }
    }
</style>

<section class="faqx-wrap" style="background:{{ section.settings.bg }};padding:{{ section.settings.pad }}px 0;">
  <div class="faqx-container" style="max-width:{{ section.settings.width }}px;margin:auto;">
    
    <h2 class="faqx-title">
      {{ section.settings.title }}
    </h2>

    <p class="faqx-sub">
      {{ section.settings.subtitle }}
    </p>

    {% for block in section.blocks %}
    <div class="faqx-item {% if forloop.first %}active{% endif %}">
      <button class="faqx-btn">
        {{ block.settings.question }}
        <span class="faqx-icon">{% if forloop.first %}−{% else %}+{% endif %}</span>
      </button>
      <div class="faqx-body" {% if forloop.first %}style="max-height:1000px"{% endif %}>
        <div class="faqx-inner">
          {{ block.settings.answer }}
        </div>
      </div>
    </div>
    {% endfor %}

  </div>
</section>
<script>
document.querySelectorAll('.faqx-btn').forEach(btn=>{
  btn.addEventListener('click',()=>{
    const item = btn.parentElement;
    const body = item.querySelector('.faqx-body');
    const icon = item.querySelector('.faqx-icon');

    if(item.classList.contains('active')){
      body.style.maxHeight = null;
      item.classList.remove('active');
      icon.innerText = '+';
    }else{
      body.style.maxHeight = body.scrollHeight + 'px';
      item.classList.add('active');
      icon.innerText = '−';
    }
  });
});
</script>

{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "FAQ’s"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "We Take Messages Only And Guarantee To Respond To Your Call By 3pm PST The Next Business Day. Email Us For The Fastest Communication Possible."
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "pad",
      "label": "Top & Bottom Padding",
      "min": 20,
      "max": 100,
      "step": 5,
      "default": 60
    },
    {
      "type": "range",
      "id": "width",
      "label": "Content Width",
      "min": 600,
      "max": 1500,
      "step": 20,
      "default": 1200
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Do you have a question?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Write your answer here.</p>"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "FAQ Accordion",
      "category": "Text"
    }
  ]
}
{% endschema %}
