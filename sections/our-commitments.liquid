{%- liquid
  assign heading = section.settings.heading
  assign sub_heading = section.settings.sub_heading
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .our-commitments {
    .osl-items-wrapper {
      display: flex;
      flex-wrap: wrap;
      gap: 50px;
      justify-content: center;
      margin-top: 50px;
    }
    h2.heading {
      margin: 0;
      margin-bottom: 15px;
      letter-spacing: normal;
      text-align: center;
    }
    p.sub-heading {
      letter-spacing: normal;
      font-size: 22px;
      text-align: center;
      max-width: 1160px;
      line-height: 1.3;
      margin: auto;
    }
    .icon-1 {
      text-align: center;
      margin-bottom: 10px;
      img {
        width: 100px;
        height: auto;
      }
    }

    .osl-item {
      width: calc(33.33% - 50px);
      padding: 20px 15px;
      border-radius: 10px;
      background-color: #e0eeff;
      text-align: center;
      box-shadow: 2px 4px 4px 0px #00000040;
      img {
        width: auto;
        height: 87px;
        display: block;
        aspect-ratio: auto;
        object-fit: contain;
        border-radius: 10px;
        margin: auto;
      }
    }

    h4.title {
      font-size: 24px;
      letter-spacing: normal;
      line-height: 1.2;
      margin: 15px 0;
      color: #000;
      font-weight: bold;
    }
    p.text {
      font-size: 18px;
      letter-spacing: 0px;
      line-height: 1.2;
      margin: 0px;
    }
    @media screen and (max-width: 1250px) {
      .osl-item {
        width: calc(50% - 50px);
      }
    }
    @media screen and (max-width: 989px) {
      .osl-item {
        width: 100%;
      }
      h2.heading {
        margin-bottom: 20px;
      }
    }
    @media screen and (max-width: 768px) {
      .icon-1 {
        img {
          width: 60px;
        }
      }
      h4.title {
        font-size: 18px;
      }
      p.text {
        font-size: 16px;
      }
      .osl-items-wrapper {
        gap: 30px;
        margin-top: 20px;
      }
      .osl-item {
        img {
          height: 60px;
        }
      }
      p.sub-heading {
        font-size: 18px;
      }
    }
  }
</style>

<div
  class="our-commitments section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient"
>
  <div class="page-width">
    <div class="osl-wrapper">
      {%- if heading != blank -%}
        <h2 class="heading">{{ heading }}</h2>
      {%- endif -%}
      {%- if sub_heading != blank -%}
        <p class="sub-heading">{{ sub_heading }}</p>
      {%- endif -%}
      <div class="osl-items-wrapper">
        {%- for block in section.blocks -%}
          {%- liquid
            assign title = block.settings.title
            assign text = block.settings.text
            assign image = block.settings.image
          -%}
          <div class="osl-item" {{ block.shopify_attributes }}>
            {%- if image -%}
              {{ image | image_url: width: image.width | image_tag: loading: 'lazy' }}
            {%- endif -%}
            {%- if title != blank -%}
              <h4 class="title">{{ title }}</h4>
            {%- endif -%}
            {%- if text != blank -%}
              <p class="text">{{ text }}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Our Commitments",
  "tag": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Self Health Research Center (SHRC) is a supplement marketing company specializing in marketing supplements promoted by pioneers in the alternative and integrative health industry. Typically authors and influencers."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Lab Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Volcano Eruption Adventure"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Watch a homemade volcano erupt with fizzing lava while learning about eruptions and natural forces. "
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Commitments",
      "blocks": [
        {
          "type": "block"
        },
        {
          "type": "block"
        },
        {
          "type": "block"
        }
      ]
    }
  ]
}
{% endschema %}
