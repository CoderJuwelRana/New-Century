{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .review-section {
    --page-width-horizontal-space: 8.5rem;
    .page-width {
      max-width: calc(var(--page-width) + 80px);
      position: relative;
    }
    h2.title {
      margin: 0;
      margin-bottom: 20px;
    }
    p.sub_title {
      margin: 0;
      font-size: 22px;
      letter-spacing: normal;
      line-height: 1.3;
    }
    .review-wrapper {
      margin-top: 50px;
      position: unset;
    }
    .swiper-slide-area {
      border: 1px solid #8e8e8e;
      padding-top: 60px;
      border-radius: 10px;
      overflow: hidden;
      position: relative;
    }
    .cus-info-wrapper {
      display: flex;
      align-items: center;
      gap: 20px;
      background-color: #c0cfe0;
      padding: 24px 22px;
    }
    h4.name {
      letter-spacing: normal;
      margin: 0;
      font-size: 22px;
      font-weight: var(--font-weight-600);
    }
    p.customer {
      margin: 0;
      letter-spacing: normal;
    }
    p.text {
      font-size: 16px;
      letter-spacing: normal;
      padding: 36px 22px;
      line-height: 1.8;
      font-style: italic;
      margin: 0;
      margin-bottom: 30px;
    }
    .review-stars {
      padding-inline: 22px;
    }
    .swiper-button-prev,
    .swiper-button-next {
      background-color: #dcdddf;
      box-shadow: 0px 2px 4px 0px #00000040;
      width: 35px;
      height: 35px;
      padding: 5px;
      border-radius: 3px;
      top: 62%;
    }
    .swiper-button-prev svg {
      transform: rotate(180deg);
    }
    .swiper-button-next:after,
    .swiper-button-prev:after {
      display: none;
    }
    .quotes {
      width: 72px;
      height: auto;
      position: absolute;
      right: 22px;
      top: 25px;
      svg {
        width: 100%;
        height: auto;
        display: block;
      }
    }
    .cus-img {
      width: 48px;
      height: 48px;
      img {
        width: 100%;
        height: 100%;
        display: block;
      }
    }
    @media screen and (max-width: 749px) {
      --page-width-horizontal-space: 4.5rem;
      .review-wrapper {
        margin-top: 30px;
      }
      p.text {
        padding: 15px 16px;
        margin-bottom: 10px;
        line-height: 1.6;
        font-size: 14px;
      }
      p.sub_title {
        font-size: 16px;
      }
      .swiper-button-prev,
      .swiper-button-next {
        width: 26px;
        height: 26px;
      }
      .cus-info-wrapper {
        padding: 18px 20px;
      }
      h2.title {
        margin-bottom: 10px;
      }
      h4.name {
        font-size: 18px;
      }
    }
  }
</style>

{%- liquid
  assign title = section.settings.title
  assign sub_title = section.settings.sub_title
-%}

<div class="review-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if title != blank -%}
      <h2 class="title center">{{ title }}</h2>
    {%- endif -%}
    {%- if sub_title != blank -%}
      <p class="sub_title center">{{ sub_title }}</p>
    {%- endif -%}

    <review-slider class="review-wrapper swiper mySwiper">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- liquid
            assign star = block.settings.star
            assign text = block.settings.text
            assign cus_image = block.settings.cus_image
            assign cus_name = block.settings.cus_name
            assign customer = block.settings.customer
          -%}
          <div class="swiper-slide">
            <div class="swiper-slide-area">
              <div class="quotes">
                {{ 'quotes.svg' | inline_asset_content }}
              </div>
              <div class="review-stars">
                {%- for i in (1..star) -%}
                  {{ 'icon-review-star.svg' | inline_asset_content }}
                {%- endfor -%}
              </div>
              {%- if text != blank -%}
                <p class="text">{{ text }}</p>
              {%- endif -%}
              <div class="cus-info-wrapper">
                {%- if cus_image != blank -%}
                  <div class="cus-img">
                    {{ cus_image | image_url: width: cus_image.width | image_tag: loading: 'lazy' }}
                  </div>
                {%- endif -%}
                <div class="cus-info">
                  {%- if cus_name != blank -%}
                    <h4 class="name">{{ cus_name }}</h4>
                  {%- endif -%}
                  {%- if customer != blank -%}
                    <p class="customer">{{ customer }}</p>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <div class="swiper-button-next">{{ 'icon-slide.svg' | inline_asset_content }}</div>
      <div class="swiper-button-prev">{{ 'icon-slide.svg' | inline_asset_content }}</div>
    </review-slider>
  </div>
</div>

{% schema %}
{
  "name": "Review Slider",
  "tag": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "Customer Reviews"
    },
    {
      "type": "textarea",
      "id": "sub_title",
      "label": "Sub Title",
      "default": "Explore Genres and Topics That Inspire and Engage"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Review Item",
      "settings": [
        {
          "type": "range",
          "id": "star",
          "label": "Review Star",
          "step": 1,
          "max": 5,
          "min": 0,
          "default": 4
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Review Text",
          "default": "Established in 1993 we have developed extensive distribution contacts for books about alternative medicine. NCP is a vendor for Ingram, Baker & Taylor, Amazon, BN.com, and other distributors that target alternative bookstores and health food stores. We personally work with you from start to finish."
        },
        {
          "type": "image_picker",
          "id": "cus_image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "cus_name",
          "default": "John Doe",
          "label": "Customer Name"
        },
        {
          "type": "text",
          "id": "customer",
          "label": "Customer",
          "default": "customer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Slider",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}

<script src="{{ 'review.js' | asset_url }}" defer="defer"></script>
